<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
<!--Container-->
<LinearLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    >
<!--    Action Bar   -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingHorizontal="10dp"
    android:background="@drawable/shadow"
    android:elevation="4dp"
    >

    <LinearLayout
        android:id="@+id/action_bar"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            />
        <TextView
            android:id="@+id/app_name"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            />
    </LinearLayout>
        <!--        Target Gpa Button-->
        <Switch
            android:id="@+id/switch_to_target_gpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Target Gpa " />

<!--        End of Target  Gpa Button-->

</LinearLayout>
<!--End of Action Bar-->

<!--    Gpa Calculator Container-->
    <LinearLayout
        android:id="@+id/gpa_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

<!--    Display Screen-->
    <LinearLayout
        android:id="@+id/display"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<!--        Box1-->
        <LinearLayout
            android:id="@+id/box1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:paddingVertical="10dp"
            >

<!--            Semster Text-->
            <TextView
                android:id="@+id/semster_text_view"
                android:text="Semester GPA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
<!--            End of Semster Text-->


<!--            Semster Gpa TextView-->
            <TextView
                android:id="@+id/semster_gpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:maxLength="5"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                />
<!--            End of Semster Gpa TextView-->

<!--            Container of Semster text and its Value-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
<!--            Semster Credit Hours-->
            <TextView
                android:id="@+id/semster_credit_hours_text_view"
                android:text="Semster Credits : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<!--            End of Semster Credit Hours-->
                <TextView
                    android:id="@+id/semster_credits_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    />
            </LinearLayout>
<!--            End of Container-->

        </LinearLayout>
<!--        End of Box1-->

<!--        Box2-->
        <LinearLayout
            android:id="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:paddingVertical="10dp"
            >

<!--            Cumulative Text-->
            <TextView
                android:id="@+id/cumulative_text_view"
                android:text="Cumulative GPA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
<!--            End of  Cumulative Text-->


            <!--            Cumulative Gpa TextView-->
            <TextView
                android:id="@+id/cumulative_gpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
