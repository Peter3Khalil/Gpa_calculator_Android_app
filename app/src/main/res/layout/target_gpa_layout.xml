<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/target_gpa_calculator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    android:gravity="center"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:id="@+id/text_view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gpa_of_next_semster_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginVertical="5dp"
            />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Peter"
            android:visibility="gone"
            android:textColor="#575151"
            android:textSize="12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/current_gpa"
        android:hint="Current GPA"
        android:maxLength="5"
        android:maxLines="1"
        android:background="@drawable/input_style"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/error_current_gpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Peter"
        android:textColor="#DA6363"
        />
    <EditText
        android:id="@+id/target_gpa"
        android:hint="Target GPA"
        android:maxLength="5"
        android:maxLines="1"
        android:background="@drawable/input_style"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/error_target_gpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peter"
        android:visibility="gone"
        android:textColor="#DA6363"
        />
    <EditText
        android:id="@+id/current_credits"
        android:hint="Current Credits"
        android:maxLength="3"
        android:maxLines="1"
        android:background="@drawable/input_style"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/additional_credits"
        android:hint="Additional Credits"
        android:maxLines="1"
        android:background="@drawable/input_style"
        android:textAlignment="center"
        android:maxLength="3"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
